<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_colour"
    tools:context=".SeekerLocalRequestAutoMap">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request a service"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:id="@+id/requestDetails"
        android:textColor="@color/black"
        />


    <EditText
        android:id="@+id/requestTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Request Title"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/requestDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Request Description"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location for your request"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:id="@+id/requestLocation"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="City"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/suburb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Suburb"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/streetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Street Name"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/streetNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="number"
        android:hint="Street Number"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/buildingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Building Name"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/buildingNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Building Number"
        android:inputType="number"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="number"
        android:hint="Floor Number"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/apartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="number"
        android:hint="Apartment Number"
        android:textColorHint="#4C4545"
        android:textColor="@color/black"
        />


    <Button
        android:id="@+id/getLocation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Get Location"
        android:background="@drawable/custom_button"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Confirm"
        android:background="@drawable/custom_button"/>


</LinearLayout>